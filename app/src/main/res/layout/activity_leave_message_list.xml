<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lcsd.police.activity.LeaveMessageActivity"
    android:orientation="vertical"
    android:background="@color/whilte">
    <include layout="@layout/defult_titlebar2"/>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ptr_leave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close_either="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <ListView
            android:id="@+id/lv_leave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/xian"
            android:dividerHeight="0.5dp" />
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
</LinearLayout>

